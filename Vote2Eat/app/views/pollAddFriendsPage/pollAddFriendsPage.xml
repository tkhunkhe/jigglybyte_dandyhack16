  <Page loaded="pageLoaded">
  	<StackLayout orientation="vertical">
  		<Button text="Choose a contact" tap="getContact" class="btn" />
  		<Label text="{{ contact_name }}" visibility="{{ contact_name ? 'visible' : 'collapsed' }}" />
  		<Button text="{{ 'Send text to: ' + contact_name }}" class="btn" tap="sendMessage" visibility="{{ contact_name ? 'visible' : 'collapsed' }}"/>

  		<Button text="next" tap="next"/>


  	</StackLayout>
  </Page>